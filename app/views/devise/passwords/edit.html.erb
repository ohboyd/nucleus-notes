<div class="devise-form">
  <div class="card p-5 mx-auto text-center">
    <p><%= link_to image_tag('logo.jpg', size: 170), root_path %></p>
    <h1 class="h3 mb-3 font-weight-normal">Update password</h1>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "form-signin" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.label :password, "New password" %><br />
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control' %>
        <small id="passwordHelpBlock" class="form-text text-muted">
          Must be at least 6 characters
        </small>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Confirm new password" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.submit "Change my password", class: 'btn btn-primary' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
