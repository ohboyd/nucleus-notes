<div class="devise-form">
  <div class="card p-5 mx-auto text-center">
    <p><%= link_to image_tag('logo.jpg', size: 170), root_path %></p>
    <h1 class="h3 mb-3 font-weight-normal">Forgotten password?</h1>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-signin"}) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.submit "Email reset instructions", class: 'btn btn-primary' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
