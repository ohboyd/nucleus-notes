<div class="devise-form">
  <div class="card p-5 mx-auto text-center">
    <%= form_with model: @note, local: true do |f| %>
      <div class="form-group">
        <%= f.label :title %><br>
        <%= f.text_field :title, autofocus: true, autocomplete: 'off', class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :content %><br>
        <%= f.rich_text_area :content, class: 'text-left' %>
      </div>

      <div class="form-group">
        <%= f.submit class: 'btn btn-primary' %>
      </div>

      <% unless @note.new_record? %>
        <%= link_to 'Cancel', @note, class: 'btn btn-outline-secondary' %>
      <% end %>
    <% end %>
  </div>
</div>
