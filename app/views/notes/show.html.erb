<h1 class="text-center">Your note</h1>
<div class="devise-form mb-2">
  <div class="card p-5 mx-auto text-center">
    <div id="note_#{@note.id}" style="position: absolute; top:1.5em; right:0em; left:auto;">
      <%= link_to complete_note_path(@note), method: :patch, local: true do %>
        <div class="check-or-not" data-toggle="tooltip" title="Archive this note"></div>
      <% end %>
    </div>
    <h2><%= @note.title %></h2>
    <p><%= @note.content %></p>

    <div class="form-group">
      <%= link_to 'Edit', edit_note_path(@note), class: 'btn btn-primary' %><br>
    </div>
    <div class="form-group">
    <%= link_to 'Delete', note_path(@note), method: :delete, data: { confirm: 'Are you sure?'}, class: 'btn btn-outline-secondary' %>
    </div>
    <div>
      <%= mail_to('', 'Email contents of note', subject: @note.title, body: @note.content.body.to_plain_text, reply_to: current_user.email, class: 'btn btn-secondary') %>
    </div>
  </div>
</div>
